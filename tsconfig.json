{
  "compilerOptions": {
    "noImplicitAny": true,
    "alwaysStrict": true,
    "target": "es6",
    "module": "CommonJS",
    "removeComments": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
  "paths": {
    "@/*": ["*"]
  }
}
